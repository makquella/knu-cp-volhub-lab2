@{
    var principal = User;
    var isAuthenticated = principal?.Identity?.IsAuthenticated ?? false;
    var displayName = isAuthenticated
        ? (principal?.FindFirst("name")?.Value ?? principal?.Identity?.Name ?? "Профіль")
        : null;
}
<!DOCTYPE html>
<html lang="uk">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - VolHub</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/VolHub.Mvc.styles.css" asp-append-version="true" />
</head>
<body>
<header>
    <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container-fluid">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">VolHub</a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#mainNav" aria-controls="mainNav"
                    aria-expanded="false" aria-label="Перемкнути навігацію">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div id="mainNav" class="collapse navbar-collapse">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Index">Головна</a>
                    </li>
                    @if (isAuthenticated)
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown" aria-expanded="false">
                                Підзадачі
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-controller="Subroutines" asp-action="Bmi">BMI</a></li>
                                <li><a class="dropdown-item" asp-controller="Subroutines" asp-action="TextTool">TextTool</a></li>
                                <li><a class="dropdown-item" asp-controller="Subroutines" asp-action="Geo">GeoDistance</a></li>
                            </ul>
                        </li>
                    }
                </ul>

                <ul class="navbar-nav ms-auto align-items-center">
                    @if (isAuthenticated)
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Account" asp-action="Profile">Профіль (@displayName)</a>
                        </li>
                        <li class="nav-item">
                            <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-outline-danger btn-sm">Вийти</button>
                            </form>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Account" asp-action="Login">Увійти</a>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-primary btn-sm ms-2" asp-controller="Account" asp-action="Register">Реєстрація</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>
</header>

<div class="container">
    @if (TempData["StatusMessage"] is string status && !string.IsNullOrWhiteSpace(status))
    {
        <div class="alert alert-info alert-dismissible fade show" role="alert">
            @status
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Закрити"></button>
        </div>
    }

    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="border-top footer text-muted">
    <div class="container py-3 d-flex flex-column flex-sm-row justify-content-between align-items-center">
        <span>&copy; @DateTime.UtcNow.Year - VolHub · ЛР-3 (ASP.NET Core MVC + OAuth2)</span>
        <a asp-controller="Account" asp-action="Profile" class="text-decoration-none">Профіль</a>
    </div>
</footer>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>

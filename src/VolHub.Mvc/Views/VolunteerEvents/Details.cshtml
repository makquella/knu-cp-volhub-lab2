@model VolHub.Mvc.Models.VolunteerEvent
@{
    ViewData["Title"] = $"Подія: {Model.Title}";
}

<div class="d-flex justify-content-between align-items-start mb-3">
    <h2>@Model.Title</h2>
    <span class="badge bg-success fs-6">@Model.EventCategory.Name</span>
</div>

<div class="row g-4">
    <div class="col-lg-7">
        <div class="card h-100">
            <div class="card-body">
                <h5 class="card-title">Опис</h5>
                <p class="card-text">@Model.Summary</p>
                <dl class="row mb-0">
                    <dt class="col-sm-4">Організатор</dt>
                    <dd class="col-sm-8">@Model.Organizer</dd>

                    <dt class="col-sm-4">Початок</dt>
                    <dd class="col-sm-8">@Model.StartDateUtc.ToLocalTime():f</dd>

                    <dt class="col-sm-4">Завершення</dt>
                    <dd class="col-sm-8">@Model.EndDateUtc.ToLocalTime():f</dd>

                    <dt class="col-sm-4">Місткість</dt>
                    <dd class="col-sm-8">@Model.Capacity</dd>

                    <dt class="col-sm-4">Дата створення</dt>
                    <dd class="col-sm-8">@Model.CreatedUtc.ToLocalTime():f</dd>
                </dl>
            </div>
        </div>
    </div>
    <div class="col-lg-5">
        <div class="card h-100">
            <div class="card-body">
                <h5 class="card-title">Локація</h5>
                <p class="card-text">
                    <strong>@Model.Venue.Name</strong><br/>
                    @Model.Venue.City<br/>
                    @(string.IsNullOrWhiteSpace(Model.Venue.Address) ? "Адреса не вказана" : Model.Venue.Address)<br/>
                    @(string.IsNullOrWhiteSpace(Model.Venue.Room) ? "" : $"Приміщення: {Model.Venue.Room}")
                </p>
                <a class="btn btn-outline-primary btn-sm"
                   asp-controller="Venues"
                   asp-action="Details"
                   asp-route-id="@Model.VenueId">
                    Переглянути локацію
                </a>
            </div>
        </div>
    </div>
</div>

<div class="mt-4 d-flex gap-2">
    <a class="btn btn-outline-secondary" asp-action="Index">← До переліку подій</a>
    <a class="btn btn-outline-secondary" asp-controller="EventCategories" asp-action="Details" asp-route-id="@Model.EventCategoryId">
        Категорія
    </a>
</div>

@model IReadOnlyList<VolHub.Mvc.Models.Venue>
@{
    ViewData["Title"] = "Локації";
}

<h2 class="mb-3">Локації проведення</h2>
<p class="text-muted mb-4">
    Перелік майданчиків, на яких відбуваються активності VolHub.
</p>

<div class="row g-3">
@foreach (var venue in Model)
{
    <div class="col-md-6 col-lg-4">
        <div class="card h-100">
            <div class="card-body d-flex flex-column">
                <h5 class="card-title">@venue.Name</h5>
                <p class="card-text mb-1"><strong>Місто:</strong> @venue.City</p>
                <p class="card-text mb-1"><strong>Адреса:</strong> @(string.IsNullOrWhiteSpace(venue.Address) ? "-" : venue.Address)</p>
                <p class="card-text text-muted mb-3">
                    @(string.IsNullOrWhiteSpace(venue.Room) ? "" : $"Приміщення: {venue.Room}")
                </p>
                <div class="mt-auto">
                    <a class="btn btn-outline-primary btn-sm" asp-action="Details" asp-route-id="@venue.Id">
                        Детальніше
                    </a>
                </div>
            </div>
        </div>
    </div>
}
</div>
